@{
    Layout = null;
    var mode = ViewBag.Mode as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Welcome</title>
</head>
<body>
    <h1>🎉 Login Successful!</h1>
    <p>You’ve logged in via the <strong>@mode</strong> method.</p>
    <p>
        @if (mode == "Vulnerable")
        {
            <em style="color:orange">This was the vulnerable implementation—do not use in production!</em>
        }
        else
        {
            <em style="color:green">This used parameterized queries and is safe from SQL injection.</em>
        }
    </p>
    <a href="@Url.Action("Index")">Back to Login</a>
</body>
</html>
